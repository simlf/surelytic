<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to organization_path, class: "navbar-brand" do %>
    <%= image_tag "surelytics.svg" %>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <% if user_signed_in? %>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">

        <li class="nav-item dropdown">

          <%= image_tag 'user-circle-regular.svg', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>

          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>

  <% else %>

     <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <div class="btn btn-light">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </div>
        </li>
        <br>
        <li class="nav-item">
          <div class="btn btn-primary">
            <%= link_to "Get started", new_user_registration_path, class: "nav-link" %>
          </div>
        </li>
      </ul>
    </div>
  <% end %>
</div>
