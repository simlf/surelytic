
<div class="ligne3">
  <div class="container-h">
      <div class="orga-section-headline d-flex">
        <h2><i class="fas fa-cogs" id="menu-icon"></i> Projects Overview</h2>
        <%= link_to "Get started", new_project_path, class: "btn btn-primary"  %>
      </div>
        <div class="scrolling-wrapper">
          <% @projects.each do |project| %>
          <%= link_to project_path(project) do %>
          <div class= "c">
              <h4 style="margin-left: 20px">  <i class="far fa-eye"></i> Â <%= project.name.upcase %>
            <div class="card-header">
              <div class="d-flex align-items-center justify-content-between">
              <h4> <%= project.tests.count %> test(s)</h4>
              <% tests_with_results = project.tests.select {|test| !test.results.empty? } %>
              <div class="d-flex align-items-center">
              <h4><i class="far fa-times-circle" style="color:#FF2B49; font-size:45px;"></i></h4>
              <h4><%=  error = tests_with_results.map {|test| test.results.last.number_incorrect_values }.sum %></h4>
              </div>
              </div>
            </div>
            <div class="card-details-title">
              <% if project.tests.exists? %>
                <% project.tests.each do |test| %>
                  <h6><%= test.name.capitalize %> | <%= link_to '<i class="fas fa-search-plus"></i>'.html_safe, project_test_path(project, test) %> </h6>
                  <div class="card-details-content">
                    <p>
                      <i class="fas fa-hourglass-half"></i>
                      <%= test.frequency.capitalize %>
                    </p>
                    <p>
                      <i class="far fa-calendar-alt"></i> <%= test.created_at %>
                    </p>
                  </div>
                <% end %>
              <% else %>
                <p>There isn't any test yet in <%= project.name %></p>
                <button type="button" class="btn btn-primary">
                  <%= link_to 'New test', new_project_test_path(project.id) %>
                </button>
              <% end %>
            </div>
            <% end %>
          </div>
          <% end %>
        </div>
  </div>
</div>
</div>
