<div class="container">
  <br>
  <br>
  <br>
  <br>
  <h1><%= @organization.name %></h1>
    <div class="orga-section">

      <div class="orga-section-headline d-flex">
        <h2><i class="fas fa-money-check-alt"></i> Credits</h2>
        <button type="button" class="btn btn-primary">Purchase extra credits</button>
      </div>

      <div id="credits_display" class="d-flex">
          <div >
            <div class="card-header">Monthly credits</div>
            <div class="card-details-title card-details-title-center"><%= @organization.monthly_credits %></div>
          </div>

          <div>
            <div class="card-header">Current credits</div>
            <div class="card-details-title card-details-title-center"><%= @organization.current_credits %></div>
          </div>
      </div>
    </div>

    <div class="orga-section">
      <div class="orga-section-headline d-flex">
        <h2><i class="fas fa-user-tie"></i> Users</h2>
          <button type="button" class="btn btn-primary">
        <%= link_to 'New user', new_organization_user_path %>
          </button>
      </div>

      <div class="d-flex users_display">
        <% @organization.users.each do |user| %>
        <div class="home-user">
          <img src="https://kitt.lewagon.com/placeholder/users/ssaunier">
          <div class="user-card"><%= user.email %></div>
          <div>Edit user info</div>
        </div>
        <% end%>
      </div>
    </div>

    <div class="orga-section">
      <div class="orga-section-headline d-flex">
        <h2><i class="fas fa-cogs"></i> Projects</h2>
        <button type="button" class="btn btn-primary">Create new project</button>
      </div>

        <% @projects.each do |project| %>
          <div class="card-header">
            <h4><%= project.name.capitalize %>  | <%= link_to '<i class="far fa-eye"></i>'.html_safe, project_path(project) %>
            </h4>
          </div>

        <div class="card-details-title">
          <% if project.tests.exists? %>
            <% project.tests.each do |test| %>
              <h6><%= test.name.capitalize %> | <%= link_to '<i class="fas fa-search-plus"></i>'.html_safe, project_test_path(project, test) %> </h6>
              <div class="card-details-content">
                <p>
                  <i class="fas fa-hourglass-half"></i>
                  <%= test.frequency.capitalize %>
                </p>
                <p>
                  <i class="far fa-calendar-alt"></i> <%= test.created_at %>
                </p>
              </div>
            <% end %>
          <% else %>
            <p>There isn't any test yet in <%= project.name %></p>
            <button type="button" class="btn btn-primary">
              <%= link_to 'New test', new_project_test_path(project.id) %>
            </button>
          <% end %>
        </div>
      <% end %>
   </div>
</div>
