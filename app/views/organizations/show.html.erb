<h1><%= @organization.name %></h1>

<div class="box">
  <div class= "card d-flex">
      <canvas
      class="graph"
      id="chart-simple-bar"
      data-chart-labels="<%= @chart_data_labels.to_json %>"
      data-chart-errors="<%= @chart_data_incorrect.to_json %>"
      >
      </canvas>
  </div>

  <div class= "boxed">
    <div class= "card_orga">
      <div class="orga-section-headline d-flex">
        <h3><i class="fas fa-money-check-alt" id="menu-icon"></i> Credits <%= @organization.monthly_credits %>/month</h3>
        <%= link_to "Extra credits", "#", class: "btn btn-primary"  %>
      </div>

      <div id="credits_display" class="d-flex">
          <div>
            <div class="card-header">Current credits</div>
            <div class="card-details-title card-details-title-center">
              <h2><%= @organization.current_credits %></h2>
            </div>
          </div>
      </div>
    </div>

    <div class= "card_orga">
      <div class="orga-section-headline d-flex">
        <h3><i class="fas fa-user-tie" id="menu-icon"></i> Users</h3>
          <%= link_to "New user", new_organization_user_path, class: "btn btn-secondary"  %>
      </div>
      <div class="d-flex">
        <div div id="credits_display" class="d-flex">
          <div class="home-user">
            <i class="far fa-user-circle"></i>
            <h2 class="card-details-title-center">
              <%= @organization.users.count %>
            </h2>
          </div>
        </div>

        <div class="box-user">
          <% @organization.users.each do |user| %>
            <p><%= user.email %></p>
          <% end%>
        </div>
      </div>
    </div>
  </div>
</div>
